{
  "parser": "babel-eslint",
  "parserOptions": {
      "ecmaVersion": 7,
      "sourceType": "module",
      "ecmaFeatures": {
          "jsx": true
      }
  },
  "plugins": [
    "react"
  ],
  "rules": {
      "space-infix-ops": "warn",
      "object-curly-spacing": ["warn", "always"],
      "react/jsx-curly-spacing": ["warn", "always"],
      "semi": ["error", "never"]
  }
}